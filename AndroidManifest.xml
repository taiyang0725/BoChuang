<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.feicui.assistant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <!-- 照相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 调用系统相机权限 -->
    <uses-feature android:name="android.hardware.camera" />
    <!-- 相机自动对焦权限 -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 写入SD卡权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 手机状态权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- WIFI权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- 结束进程权限 -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <!-- 读取联系人的权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 发短信的权限 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- 添加联系人的权限 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name="edu.feicui.assistant.exception.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.feicui.assistant.main.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.feicui.assistant.main.MenuActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.CameraActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.AddressListActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.AddContactsActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.AlterInfoActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.SendInfoActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.SoftwareActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.ClockActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.SystemActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.BatteryDetectionActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.BatteryMaintainActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.BaseActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.BaseOneActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.TakePictureActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.ChooseCameraActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.TabHostBattery" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.TabHostSpeed" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.SpeedActivity" >
        </activity>
        <activity android:name="edu.feicui.assistant.main.TimeOutActivity" >
        </activity>
        <receiver android:name="edu.feicui.assistant.main.MsgBroadcast"></receiver>
        <activity android:name="edu.feicui.assistant.main.SystemDetectionActivity" />
    </application>

</manifest>